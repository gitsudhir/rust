{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cli-ai-text-editor",
  "version": "0.1.0",
  "identifier": "com.sudhirkumar.cli-ai-text-editor",
  "build": {
    "beforeDevCommand": "bun run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist/cli-ai-text-editor/browser"
  },
  "app": {
    "windows": [
      {
        "title": "cli-ai-text-editor",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "CLI AI Text Editor - A desktop text editor with CLI capabilities",
      "longDescription": "A powerful text editor with artificial intelligence features that can be controlled via command-line interface",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true,
          "description": "The file to open in the editor"
        },
        {
          "name": "output",
          "short": "o",
          "takesValue": true,
          "description": "The output file path for save operations"
        },
        {
          "name": "verbose",
          "short": "v",
          "description": "Enable verbose logging for debugging purposes"
        },
        {
          "name": "theme",
          "short": "t",
          "takesValue": true,
          "description": "Set the editor theme (light/dark)",
          "possibleValues": ["light", "dark"]
        }
      ],
      "subcommands": {
        "edit": {
          "description": "Edit a file",
          "args": [
            {
              "name": "file",
              "index": 1,
              "takesValue": true,
              "required": true,
              "description": "The file to edit"
            }
          ]
        },
        "view": {
          "description": "View a file (read-only mode)",
          "args": [
            {
              "name": "file",
              "index": 1,
              "takesValue": true,
              "required": true,
              "description": "The file to view"
            }
          ]
        }
      }
    }
  }
}