{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "video-editor-rs",
  "version": "0.1.0",
  "identifier": "com.sudhirkumar.video-editor-rs",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "video-editor-rs",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**/*"],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "mobile": {
      "android": {
        "minSdkVersion": 24,
        "targetSdkVersion": 33
      }
    }
  }
}